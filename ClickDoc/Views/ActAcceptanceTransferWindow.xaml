<Window x:Class="ClickDoc.Views.ActAcceptanceTransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        d:DataContext="{d:DesignInstance vm:ActAcceptanceTransferVM}"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ClickDoc.ViewModels"
        xmlns:local="clr-namespace:ClickDoc.Views"
        mc:Ignorable="d"
        Title="ClickDoc" Height="800" Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.ColumnSpan="2"  Content="Акт приема-передачи оказанных услуг" HorizontalAlignment="Center" FontSize="16"/>
        
        <!-- Номер акта -->
        <Label Grid.Row="1" Grid.Column="0" Content="Номер акта:" Style="{StaticResource LabelBaseStyle}"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                    Text="{Binding ActNumber}"
                    Style="{StaticResource FormTextBox}"/>

        <!-- Дата акта -->
        <Label Grid.Row="2" Grid.Column="0" Content="Дата акта:" Style="{StaticResource LabelBaseStyle}"/>
        <DatePicker Grid.Row="2" Grid.Column="1" 
                      SelectedDate="{Binding ActDate}"
                      Style="{StaticResource FormDatePicker}"/>

        <!-- Исполнитель -->
        <Label Grid.Row="3" Grid.Column="0" Content="ФИО исполнителя:" Style="{StaticResource LabelBaseStyle}"/>
        <TextBox Grid.Row="3" Grid.Column="1" 
                    Text="{Binding PerformerFullName}"
                    Style="{StaticResource FormTextBox}"/>

        <!-- ИНН исполнителя -->
        <Label Grid.Row="4" Grid.Column="0" Content="ИНН исполнителя:" Style="{StaticResource LabelBaseStyle}"/>
        <TextBox Grid.Row="4" Grid.Column="1" 
                    Text="{Binding PerformerINN}"
                    Style="{StaticResource FormTextBox}"/>

        <!-- Номер договора -->
        <Label Grid.Row="5" Grid.Column="0" Content="Номер договора:" Style="{StaticResource LabelBaseStyle}"/>
        <TextBox Grid.Row="5" Grid.Column="1" 
                    Text="{Binding ContractNumber}"
                    Style="{StaticResource FormTextBox}"/>

        <!-- Дата договора -->
        <Label Grid.Row="6" Grid.Column="0" Content="Дата договора:" Style="{StaticResource LabelBaseStyle}"/>
        <DatePicker Grid.Row="6" Grid.Column="1" 
                      SelectedDate="{Binding ContractDate}"
                      Style="{StaticResource FormDatePicker}"/>

        <!-- Дата начала периода услуги -->
        <Label Grid.Row="7" Grid.Column="0" Content="Дата начала:" Style="{StaticResource LabelBaseStyle}"/>
        <DatePicker Grid.Row="7" Grid.Column="1" 
              SelectedDate="{Binding PeriodStart}"
              Style="{StaticResource FormDatePicker}"/>

        <!-- Дата конца периода услуги -->
        <Label Grid.Row="8" Grid.Column="0" Content="Дата конца:" Style="{StaticResource LabelBaseStyle}"/>
        <DatePicker Grid.Row="8" Grid.Column="1" 
              SelectedDate="{Binding PeriodEnd}"
              Style="{StaticResource FormDatePicker}"/>

        <!-- Тип услуги -->
        <Label Grid.Row="9" Grid.Column="0" Content="Тип услуги:" Style="{StaticResource LabelBaseStyle}"/>
        <TextBox Grid.Row="9" Grid.Column="1" 
                    Text="{Binding ServiceTypeDescription}"
                    Style="{StaticResource FormTextBox}"
                    Height="100"/>

        <!-- Стоимость единицы -->
        <Label Grid.Row="10" Grid.Column="0" Content="Cтоимость единицы:" Style="{StaticResource LabelBaseStyle}"/>
        <TextBox Grid.Row="10" Grid.Column="1" 
            Height="Auto"
            Text="{Binding UnitCost}"
            Style="{StaticResource FormTextBox}"/>

        <!-- Количество единиц -->
        <Label Grid.Row="11" Grid.Column="0" Content="Количество единиц:" Style="{StaticResource LabelBaseStyle}"/>
        <TextBox Grid.Row="11" Grid.Column="1" 
            Text="{Binding UnitCount}"
            Style="{StaticResource FormTextBox}"/>

        <!-- Номер счёта -->
        <Label Grid.Row="12" Grid.Column="0" Content="Номер счёта на оплату:" Style="{StaticResource LabelBaseStyle}"/>
        <TextBox Grid.Row="12" Grid.Column="1" 
                    Text="{Binding InvoiceNumber}"
                    Style="{StaticResource FormTextBox}"/>

        <!-- Дата счёта -->
        <Label Grid.Row="14" Grid.Column="0" Content="Дата счёта:" Style="{StaticResource LabelBaseStyle}"/>
        <DatePicker Grid.Row="14" Grid.Column="1" 
                      SelectedDate="{Binding InvoiceDate}"
                      
                      Style="{StaticResource FormDatePicker}"/>

        <!-- Дата подписания -->
        <Label Grid.Row="15" Grid.Column="0" Content="Дата подписания:" Style="{StaticResource LabelBaseStyle}"/>
        <DatePicker Grid.Row="15" Grid.Column="1" 
              SelectedDate="{Binding LastDate}"
              Style="{StaticResource FormDatePicker}"/>

        <Button Grid.Row="16" Grid.ColumnSpan="2"
                Content="Создать"
                Margin="0, 30, 0, 0"
                Width="120" Height="30"
                FontSize="16"
                Command="{Binding CreateCommand}"/>
    </Grid>
</Window>
