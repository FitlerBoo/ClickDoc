<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BaseMenuBtnStyle"
       TargetType="Button">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        BorderThickness="5"
                        BorderBrush="White"
                        CornerRadius="10">
                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <Image Source="{TemplateBinding Tag}"
                                   Width="16"
                                   Height="16"
                                   Margin="0,0,5,0"
                                   Visibility="{TemplateBinding Tag}"/>
                            <ContentPresenter 
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </StackPanel>
                        <Border.Background>
                            <SolidColorBrush x:Name="BorderBackground"
                                         Color="#FF6140" />
                        </Border.Background>

                    </Border>


                    <ControlTemplate.Triggers>

                        <EventTrigger RoutedEvent="Border.MouseEnter"
                                  SourceName="border">

                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                Storyboard.TargetProperty="Color"
                                                From="#FF6140"
                                                To="#FF8B73"
                                                Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>

                        <EventTrigger RoutedEvent="Border.MouseLeave"
                                  SourceName="border">

                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                Storyboard.TargetProperty="Color"
                                                From="#FF8B73"
                                                To="#FF6140"
                                                Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

    <Style x:Key="CreateButtonStyle" BasedOn="{StaticResource BaseMenuBtnStyle}" TargetType="Button">
        <Setter Property="Content" Value="СОЗДАТЬ"/>
        <Setter Property="Tag" Value="..\Images\add.png"/>
    </Style>

    <Style x:Key="DowloadButtonStyle" BasedOn="{StaticResource BaseMenuBtnStyle}" TargetType="Button">
        <Setter Property="Content" Value="ЗАГРУЗИТЬ"/>
        <Setter Property="Tag" Value="\Images\downloads.png"/>
    </Style>
</ResourceDictionary>